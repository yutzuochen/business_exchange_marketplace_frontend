# Development Dockerfile for Next.js frontend
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat

# Create user to avoid permission issues
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy package files and install dependencies as root first
COPY package*.json ./
RUN npm ci

# Change ownership of node_modules to nextjs user
RUN chown -R nextjs:nodejs /app/node_modules
RUN chown -R nextjs:nodejs /app

# Switch to nextjs user
USER nextjs

# Copy source code (this will be overridden by volume mount in development)
COPY --chown=nextjs:nodejs . .

# Expose port
EXPOSE 3000

# Set environment variables for development
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1
ENV NEXT_PUBLIC_API_URL=http://localhost:8080

# Start development server
CMD ["npm", "run", "dev"]
